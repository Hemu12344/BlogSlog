<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>All Posts</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    @keyframes fadeSlideUp {
      0% {
        opacity: 0;
        transform: translateY(20px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }
    .fade-slide {
      animation: fadeSlideUp 0.6s ease forwards;
    }
  </style>
</head>

<body class="bg-gray-300 from-blue-50 via-white to-gray-100 text-gray-800 font-sans min-h-screen">

  <!-- Navbar -->
  <nav class="flex justify-between items-center px-6 py-4 bg-white shadow-md sticky top-0 z-50">
    <% if (token) { %>
      <div class="flex items-center space-x-6">
        <a href="/" class="text-blue-600 hover:text-blue-800 font-medium transition duration-200">Home</a>
        <a href="/posts/<%= userId %>"
          class="text-blue-600 hover:text-blue-800 font-medium transition duration-200">Posts</a>
        <% if (userId) { %>
          <a href="/createPost/<%= userId %>"
            class="text-blue-600 hover:text-blue-800 font-medium transition duration-200">Create Post</a>
          <% } %>
      </div>
      <a href="/logout"
        class="text-red-500 hover:text-red-700 font-semibold transition duration-200 bg-red-100 px-3 py-1 rounded-lg hover:bg-red-200">Logout</a>
      <% } else { %>
        <div class="flex items-center space-x-6">
          <a href="/login"
            class="text-blue-600 hover:text-blue-800 font-medium transition duration-200">Login</a>
          <a href="/signup"
            class="text-blue-600 hover:text-blue-800 font-medium transition duration-200">Signup</a>
        </div>
        <% } %>
  </nav>

  <!-- Main Content -->
  <main class="max-w-4xl mx-auto mt-10 px-4">
    <h1 class="text-4xl font-bold mb-10 text-center text-blue-700">All Posts</h1>
    <% if (posts.length===0) { %>
      <p class="text-center text-gray-600 text-lg">No posts available.</p>
      <% } else { %>
        <div class="space-y-6">
          <% posts.forEach((post, index)=> { %>
            <div class="bg-white p-6 rounded-2xl shadow-md transform transition-all duration-300 hover:shadow-xl hover:scale-[1.02] fade-slide opacity-0"
              style="animation-delay:index * 100ms">
              <div class="flex justify-between items-start mb-2">
                <small class="text-sm text-gray-500">ðŸ“… <%=post.date %></small>
                <a href="/rem/<%=post._id%>/<%=userId%>"
                  class="text-sm text-red-500 hover:text-white px-3 py-1 rounded-full bg-red-100 hover:bg-red-600 transition font-semibold">Remove</a>
              </div>
              <div class="flex justify-between items-center">
                <p class="text-lg text-gray-800 leading-relaxed w-full pr-4">
                  <%= post.postData %>
                </p>
                <a href="/edit/<%=post._id%>"
                  class="text-blue-500 hover:text-blue-800 font-medium underline">Edit</a>
              </div>
            </div>
            <% }); %>
        </div>
        <% } %>
  </main>

</body>

</html>
